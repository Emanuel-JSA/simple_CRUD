<%= render 'shared/errors', obj: @category%>

<%= form_with(model: @category, local: true) do |f| %>
    
  <%= f.label :name, "Nome da categoria", class: "form-label"%>
  <%= f.text_field :name, class: "form-control"%>

  <%= f.submit "Adicionar cateogira", class: "btn btn-form btn-dark" %>
  <%= link_to 'Return to articles', root_path, class: "btn btn-form btn-dark" %>

<% end %>
