<nav class="navbar-custom">
  <div class="d-flex justify-content-between">
    <%= link_to 'Blog', root_path, class: "navbar-logo" %>
    <div class="buttons d-flex">
      <% if logged_in? %>
          <a class="nav-link dropdown-toggle font-dropdown link-no-style" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= "(admin)" if current_user.admin? %>
            <%= current_user.username %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDarkDropdownMenuLink">
            <li><%= link_to 'Logout', logout_path, class: "dropdown-link", method: :delete %></li>
            <li><%= link_to "Ver perfil", user_path(current_user.id), class: "dropdown-link" %></li>
            <li><%= link_to 'Criar um artigo', new_article_path, class: "dropdown-link" %></li>
            <li><%= link_to 'Deletar perfil', user_path(current_user), class: "dropdown-link" , method: :delete, data: { confirm: "Tem certeza?" } %></li>
            <% if logged_in? && current_user.admin? %>
            <li><%= link_to 'Criar categoria', categories_path, class: "dropdown-link" %></li>
            <% end %>
          </ul>
      <% else %>
        <%= link_to 'Login', login_path, class: "btn btn-login" %>
        <%= link_to 'Sign up', signup_path, class: "btn btn-signup btn-outline-dark" %>
      <% end %>
    </div>
  </div>
  <div class="hr"></div>
</nav>