<%= render 'shared/errors', obj: @article%>

<%= form_with(model: @article, local: true) do |f| %>
    
  <div class="row">
    <div class="col-8">
      <%= f.label :title, class: "form-label"%>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="col-4">
      <%= f.label :category, class: "form-label"%>
      <%# f.text_field :category, class: "form-control" %> 
      <%= f.collection_select :category_ids, Category.order(:name), :id, :name, 
        { prompt: "Escolha uma categoria" }, { multiple: true, class: "form-select", size: "1" }  %>
    </div>
  </div>

  <%= f.label :description, class: "form-label"%> 
  <%= f.text_area :description, class: "form-control", rows: "10"%>

  <%= f.submit class: "btn btn-form btn-dark" %>
  <%= link_to 'Return to articles', root_path, class: "btn btn-form btn-dark" %>

<% end %>
