<%= form_with(model: @user, local: true) do |f| %>

    <p>
      <%= f.label :username%> <br>
      <%= f.text_field :username, placeholder: "Digite um username"%>
    </p>
    <p class="">
      <%= f.label :email%> <br>
      <%= f.email_field :email%>
    </p>
    <p class="">
      <%= f.label :password%> <br>
      <%= f.password_field :password%>
    </p>

    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "") %>

<% end %>